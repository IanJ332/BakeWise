<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground"
    tools:context=".LoafDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/detail_loaf_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classic Sourdough"
            style="@style/TitleText"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/detail_date_baked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Baked on May 12, 2024"
            style="@style/BodyText"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"/>

        <!-- Overall Conclusion Section -->
        <androidx.cardview.widget.CardView
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall Conclusion"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"/>

                <TextView
                    android:id="@+id/detail_conclusion_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Overall conclusion text goes here..."
                    style="@style/BodyText"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorOutline"
            android:alpha="0.2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bake Diary"
            style="@style/TitleText"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/detail_notes_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- Final Loaf Photo & Feedback (Optional, at bottom or integrated) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Final Loaf"
            style="@style/TitleText"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/detail_loaf_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="?attr/colorSurfaceVariant"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/detail_feedback_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp"
            android:text="Final feedback..."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"/>

        <Button
            android:id="@+id/close_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Close"
            style="?attr/materialButtonOutlinedStyle"/>

    </LinearLayout>
</ScrollView>