<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Welcome to"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BakeWise"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:fontFamily="sans-serif-black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            android:text="Your artisan sourdough assistant."
            style="@style/BodyText" />

        <!-- Main Action: Bake Now -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bake_now_card"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bake Now"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnPrimaryContainer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Start a new Classic Sourdough"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8"/>
                
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Grid of Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Plan a Loaf -->
            <androidx.cardview.widget.CardView
                android:id="@+id/plan_card"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_plan"
                        android:layout_marginBottom="12dp"
                        app:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Create Schedule"
                        style="@style/BodyText"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Explore Recipes -->
            <androidx.cardview.widget.CardView
                android:id="@+id/explore_card"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_explore"
                        android:layout_marginBottom="12dp"
                        app:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Explore"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="View Recipes"
                        style="@style/BodyText"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Current Schedules -->
            <androidx.cardview.widget.CardView
                android:id="@+id/schedules_card"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_schedules"
                        android:layout_marginBottom="12dp"
                        app:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedules"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="My Plans"
                        style="@style/BodyText"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Past Loaves -->
            <androidx.cardview.widget.CardView
                android:id="@+id/history_card"
                style="@style/CardStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_history"
                        android:layout_marginBottom="12dp"
                        app:tint="?attr/colorPrimary"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Past Loaves"
                        style="@style/BodyText"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>